{
  "name": "@cartae/plugin-sdk",
  "version": "0.1.0",
  "description": "SDK for building BigMind plugins with Phase 3 UI infrastructure",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cartae",
    "plugin",
    "sdk",
    "webview",
    "bridge"
  ],
  "author": "BigMind Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
