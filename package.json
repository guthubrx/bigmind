{
  "name": "bigmind",
  "version": "0.1.3",
  "description": "BigMind - Clone de XMind, logiciel de cartographie mentale",
  "private": true,
  "license": "AGPL-3.0",
  "author": "guthubrx",
  "repository": {
    "type": "git",
    "url": "https://github.com/guthubrx/bigmind.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:desktop": "cd apps/desktop && pnpm dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:debug": "./node_modules/.pnpm/node_modules/.bin/playwright test tests/bigmind-debug.spec.ts --headed",
    "test:debug:quick": "node debug-bigmind-quick.js",
    "debug": "node debug-bigmind.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "build:desktop": "cd apps/desktop && pnpm build",
    "release": "semantic-release",
    "release:manual": "pnpm build && pnpm build:desktop && gh release create v$(node -p \"require('./package.json').version\") --title \"BigMind v$(node -p \"require('./package.json').version\")\" --notes \"Release BigMind v$(node -p \"require('./package.json').version\")\"",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.55.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.12",
    "turbo": "^1.11.2",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
